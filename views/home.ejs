<html>

<head>
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- <link rel="stylesheet" href="/google-sheets-node/public/style/home.css"> -->
    <link href="/style/home.css" rel="stylesheet" type="text/css">
    <title>Programa de Relacionamento - Bazar GF</title>
</head>
<%- include('partials/header')  %>

    <body>
        <nav class="pesquisa">


            <form action="/bazar-desconto/pesquisa" method="post" class="form-inline">
                <div class="form-inline">
                    <input class="form-control mr-sm-2" name="pesquisa" value="" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Pesquisar</button>
                </div>
            </form>

        </nav>

        <section class="dash">
            <div>
                <span class="titulo">Clientes no programa</span>
                <span class="numero"><%= desh[0][0] %></span>
            </div>

            <div>
                <span class="titulo">Descontos aplicados</span>
                <span class="numero"><%= desh[0][1] %></span>
            </div>

            <div>
                <span class="titulo">Clientes regulares</span>
                <span class="numero"><%= desh[0][2]  %></span>
            </div>

            <div>
                <span class="titulo">Clientes Falcão</span>
                <span class="numero"><%= desh[0][3] %></span>
            </div>
        </section>

        <section class="clienteHome">
            <table class="table table-hover">
                <thead>
                    <h1 class="titulo2">Clientes perto de trocar o benefício</h1>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Qtde de Compras</th>
                        <th scope="col">Tipo de Cliente</th>
                        <th scope="col">Editar</th>

                    </tr>
                </thead>
                <tbody>


                    <% for (let i = 0; i < 10; i++) {   %>

                        <tr class="linha">
                            <th>
                                <%= clientes[i][0] %>
                            </th>
                            <td>
                                <%= clientes[i][1] %>
                            </td>
                            <td>
                                <%= clientes[i][10] %>
                            </td>
                            <td>
                                <%= clientes[i][6] %>
                            </td>
                            <td>
                                <a class="" href="/bazar-desconto/clientes/<%= clientes[i][0] %>/edit">Editar</a>
                            </td>
                        </tr>
                        <% } %>




                </tbody>
            </table>


        </section>



        </div>

    </body>

</html>